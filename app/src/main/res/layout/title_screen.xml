<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007A33"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        android:src="@drawable/scoremate"

        />
    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.35"
        android:text="A Baseball Scorecard Tool \nBy Liam C. Ray"
        android:fontFamily="@font/bosox"
        android:background="@drawable/scorebox"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/startbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.55"
        android:button="@android:color/transparent"
        android:backgroundTint="#005B33"
        android:textColor="#FFFFFF"
        android:text="Start New Scorecard"
        android:fontFamily="@font/bosox"
        android:textSize="40dp"
        />
    <Button
        android:id="@+id/savedbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.75"
        android:button="@android:color/transparent"

        android:backgroundTint="#005B33"
        android:textColor="#FFFFFF"
        android:text="View Saved Scorecards"
        android:fontFamily="@font/bosox"
        android:textSize="40dp"

        />
    <Button
        android:id="@+id/instructbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:button="@android:color/transparent"

        android:backgroundTint="#005B33"
        android:textColor="#FFFFFF"
        android:text="How to score a baseball game"
        android:fontFamily="@font/bosox"
        android:textSize="40dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>