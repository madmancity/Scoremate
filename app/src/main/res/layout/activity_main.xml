<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:background="#007A33"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/playerbox"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        android:src="@drawable/scorebox"
        />
    <Button
        android:id="@+id/viewscorecard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        android:text="View Scorecard"
        android:fontFamily="@font/bosox"
        android:textSize="20dp"
        android:backgroundTint="#007A33"
        />
    <Button
        android:id="@+id/advance"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintHorizontal_bias="1"
        android:text="Next"
        android:fontFamily="@font/bosox"
        android:textSize="20dp"
        android:backgroundTint="#007A33"
        />
    <Button
        android:id="@+id/mainback"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintHorizontal_bias="0"
        android:text="Back"
        android:fontFamily="@font/bosox"
        android:textSize="20dp"
        android:backgroundTint="#007A33"
        />
    <TextView
        android:id="@+id/innbool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/lineupn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.11"
        app:layout_constraintHorizontal_bias="0"
        android:background="@drawable/scorebox"
        android:fontFamily="@font/bosox"
        android:textColor="#FFFFFF"
        android:text="0"
        android:textSize="30dp"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/playerns"
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="1.0"
        android:text="Press Next to Start"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:fontFamily="@font/bosox"
        android:gravity="right"
        android:padding="10dp"
        />

    <ImageView
        android:id="@+id/scorebox"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:src="@drawable/scorebox"
        />
    <TextView
        android:id="@+id/hit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815"
        app:layout_constraintHorizontal_bias="0.4"
        android:text=""
        android:gravity="center"
        android:textSize="80dp"
        android:fontFamily="@font/bosox"
        android:textColor="#FFFFFF"
        />

    <CheckBox
        android:id="@+id/bb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/redback"
        android:button="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.6"
        android:text="BB"
        android:textFontWeight="700"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="@font/bosox"
        android:textColor="#BD3039"
        />

    <CheckBox
        android:id="@+id/kswing"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/redback"
        android:button="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.785"
        android:text="KS"
        android:textFontWeight="700"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="@font/bosox"
        android:textColor="#BD3039"
        />

    <CheckBox
        android:id="@+id/klook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/redback"
        android:button="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.95"
        android:text="KL"
        android:textFontWeight="700"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="@font/bosox"
        android:textColor="#BD3039"
        />
    <CheckBox
        android:id="@+id/FO"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/redback"
        android:button="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.225"
        android:text="FO"
        android:textFontWeight="700"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="@font/bosox"
        android:textColor="#BD3039"
        />
    <CheckBox
        android:id="@+id/HBP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/redback"
        android:button="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.4"
