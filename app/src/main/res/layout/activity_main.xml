        />

    <TextView
        android:id="@+id/moundstat"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:translationX="-4dp"
        app:layout_constraintBottom_toBottomOf="@id/mound"
        app:layout_constraintEnd_toEndOf="@id/mound"
        app:layout_constraintStart_toStartOf="@id/mound"
        app:layout_constraintTop_toTopOf="@id/mound"
        android:fontFamily="@font/bosox"
        android:textSize="70dp"
        />


    <CheckBox
        android:id="@+id/htof"
